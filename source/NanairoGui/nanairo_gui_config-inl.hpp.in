#ifndef NANAIRO_NANAIRO_GUI_CONFIG_INL_HPP
#define NANAIRO_NANAIRO_GUI_CONFIG_INL_HPP

#include "NanairoGui/nanairo_gui_config.hpp"
// Standard C++ library
#include <cstddef>
#include <string>

namespace nanairo {

/*!
  */
inline
std::string GuiConfig::applicationName() noexcept
{
  using namespace std::string_literals;
  const auto name = "@PROJECT_NAME@"s;
  return name;
}

/*!
  */
inline
std::string GuiConfig::getDefaultFixedFontFamily() noexcept
{
  using namespace std::string_literals;
  const auto name = "Inconsolata"s;
  return name;
}

/*!
  */
inline
std::string GuiConfig::getDefaultFontFamily() noexcept
{
  using namespace std::string_literals;
  const auto name = "Open Sans"s;
  return name;
}

} // namespace nanairo

#endif // NANAIRO_NANAIRO_GUI_CONFIG_INL_HPP
